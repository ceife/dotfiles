feedlist-format "%2i %n |%7T| %t %> %u"

datetime-format "%D"
articlelist-format "%2i %f |%D| %t %> %L"

#show-read-feeds no
auto-reload yes

#external-url-viewer "urlscan -dc -r 'linkhandler {}'"

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
bind-key ^t next-unread

color listfocus             black   yellow
color listfocus_unread      black   yellow      bold
color listnormal            cyan    default
color listnormal_unread     blue    default     bold
color info                  red     black
color article               cyan    default

browser qutebrowser
player mpv

# Macros
# macro-prefix (,) + key
macro m set browser "mpv --profile=v %u"; open-in-browser ; set browser "qutebrowser %u"

