#!/usr/bin/env sh

choice=$(dmenu -p "Digite % de brilho do monitor")

if [ ! -z $choice ]; then
    # http://sandipbgt.com/2015/10/01/control-screen-brightness-from-commandline-in-ubuntu
    MONITOR_NAME=$(xrandr | grep " connected" | cut -f1 -d " ")
    percent_calc=$(echo "scale=2; $choice/100" | bc -l)
    # http://sandipbgt.com/2015/10/01/control-screen-brightness-from-commandline-in-ubuntu
    xrandr --output $MONITOR_NAME --brightness $percent_calc
fi
