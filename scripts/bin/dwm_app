#!/usr/bin/env sh
#
# Opçoes de dmenu para pesquisar:
#   1. arquivo/pasta de configuração
#   2. pasta de projeto
#   3. livro
#
# Inspiração: https://www.youtube.com/watch?v=UBqL9v_y8Fo&t=423s

APPS="qutebrowser\nfirefox\ndiscord\nnewsboat\nneomutt\ncmus\nnn\nmonitores\npendrives\nwifi\nscreenshot\nffmpeg\nouvir rádio\ngimp\ninkscape\nsteam"
APP_ESCOLHIDO=$(echo $APPS | dmenu -i);

case $APP_ESCOLHIDO in
    "qutebrowser")
        qutebrowser
        ;;

    "firefox")
        firefox
        ;;

    "steam")
        steam
        ;;

    "discord")
        discord
        ;;

    "newsboat")
        st -e newsboat
        ;;

    "neomutt")
        st -e neomutt
        ;;

    "cmus")
        st -e cmus
        ;;

    "nn")
        st -e nn && read
        ;;

    "monitores")
        # Monitor padrão
        #   Em caso de duvida digite xrandr
        MAINMONITOR="eDP-1"

        ORIEN_ESCOLHIDA=$(echo "duplicado\nesquerda\ndireita\nacima\nabaixo" | dmenu -i -p "O segundo monitor deve ficar");

        # Como descobrir nome do segundo monitor?
        NEWMONITOR=""

        case "$ORIEN_ESCOLHIDA" in
            duplicado) xrandr --output $NEWMONITOR --same-as $MAINMONITOR ;;
            esquerda) xrandr --output $NEWMONITOR --left-of $MAINMONITOR ;;
            direita) xrandr --output $NEWMONITOR --right-of $MAINMONITOR ;;
            acima) xrandr --output $NEWMONITOR --above $MAINMONITOR ;;
            abaixo) xrandr --output $NEWMONITOR --bellow $MAINMONITOR ;;
        esac
        ;;

    "pendrives")
        # Como mostrar todos pendrives?
        ;;

    "redes wifi")
        # Como mostrar todas redes wifi e se conectar a elas?
        ;;

    "screenshot")
        SHOT_PER=$(echo "selection\nclient\nworkspace" | dmenu -i)

        mkdir -p ~/Imagens/Screenshots
        NOME_IMG=$(echo "screenshot-$(date -d now "+%Y-%m-%d--%Hh-%Mm-%Ss")")

        case "$SHOT_PER" in
            selection) import ~/Imagens/Screenshots/$NOME_IMG.jpg ;;
            client) import -screen ~/Imagens/Screenshots/$NOME_IMG.jpg ;;
            workspace) import -window root ~/Imagens/Screenshots/$NOME_IMG.jpg ;;
        esac
        ;;

    "ffmpeg")
        RECORD_PER=$(echo "selection\nwindow\nworkspace" | dmenu -i) 
        mkdir -p ~/Vídeos/ffmpeg
        NOME_VIDEO=$(echo "screenrecord-$(date -d now "+%Y-%m-%d--%Hh-%Mm-%Ss")")

        case "$RECORD_PER" in
            # Como criar uma area para gravação?
            selection) ;;

            # Como escolher janela especifica que nem imagemagick ou simplescreenrecorder?
            client) ;;

            # Como gravar tela inteira?
            workspace) ;;
        esac
        ;;
    "ouvir rádio")
        # Lista de rádios
        RADIOS="core"

        RADIO_ESCOLHIDA=$(echo $RADIOS | dmenu -i)

        case "$RADIO_ESCOLHIDA" in
            core) st -e mpv http://194.58.97.117:8000/coreradio ;;
        esac
        ;;

    "gimp")
        st -e gimp
        ;;

    "inkscape")
        st -e inkscape
        ;;
esac
